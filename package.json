{
  "name": "job-tracker-plain",
  "version": "1.0.0",
  "description": "A simple job application tracker with no dependencies",
  "main": "dist/script.js",
  "scripts": {
    "build": "node build.js",
    "build:dev": "node build.js --dev",
    "build:separate": "node build.js --separate",
    "watch": "node build.js --watch",
    "watch:dev": "node build.js --watch --dev",
    "watch:separate": "node build.js --watch --separate",
    "dev": "node dev.js",
    "dev:old": "node build.js --watch --dev",
    "dev:separate": "node build.js --watch --separate",
    "clean": "rm -rf dist",
    "serve": "node serve.js",
    "serve:python": "cd dist && python3 -m http.server 8000 || python -m http.server 8000 || echo 'No Python found - open dist/index.html manually'",
    "setup-hooks": "./setup-hooks.sh",
    "deploy": "./deploy-gh-pages.sh",
    "postinstall": "[ -f setup-hooks.sh ] && ./setup-hooks.sh || echo 'Git hooks setup skipped'",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "pre-commit": "npm run format && npm run lint && npm run build"
  },
  "keywords": [
    "job-tracker",
    "plain-js",
    "no-dependencies"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "csso-cli": "^4.0.2",
    "html-minifier-terser": "^7.2.0",
    "terser": "^5.43.1"
  },
  "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
